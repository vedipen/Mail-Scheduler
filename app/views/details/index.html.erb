<p id="notice"><%= notice %></p>

<h1>Details</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Mobile</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @details.each do |detail| %>
      <tr>
        <td><%= detail.email %></td>
        <td><%= detail.mobile %></td>
        <td><%= link_to 'Show', detail %></td>
        <td><%= link_to 'Edit', edit_detail_path(detail) %></td>
        <td><%= link_to 'Destroy', detail, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Send Email', details_email_path(:id => detail.id) %></td>
        <!-- <td><%= link_to 'Send Email', details_path, method: :email, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Send Email to all', details_emailAll_path(:details => @details), data: { confirm: 'Are you sure?' } %>
<%= link_to 'New Detail', new_detail_path %>
